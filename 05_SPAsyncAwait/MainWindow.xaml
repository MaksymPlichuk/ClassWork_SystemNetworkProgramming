<Window x:Class="_05_SPAsyncAwait.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_05_SPAsyncAwait"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <Grid x:Name="grid" DockPanel.Dock="Top">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width=".25*"></ColumnDefinition>
            <ColumnDefinition Width="1.5*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock></TextBlock>
        <Label Grid.Row="0" Grid.Column="0">From: </Label>
        <TextBox Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" Name="fromField"> </TextBox>
          <Label Grid.Row="1" Grid.Column="0">To: </Label>
            <TextBox Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" Name="toField"></TextBox>
            <Button Grid.Column="3" Grid.ColumnSpan="2" Grid.RowSpan="2" Margin="5" FontSize="20" x:Name="copyButton" Click="copyButton_Click">COPY</Button>
    </Grid>
        <ProgressBar Value="20" Height="20" IsIndeterminate="True"></ProgressBar>
    </DockPanel>
</Window>
