<Window x:Class="_10_NPCarRegionClientUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_10_NPCarRegionClientUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="5">
            <Label FontSize="10" Content="IP: "></Label>
            <TextBox Name="ipField" MinWidth="200" VerticalContentAlignment="Center"></TextBox>
            <Label FontSize="10" Content="Port: " Margin="20 0 0 0"></Label>
            <TextBox Name="portField" MinWidth="200" VerticalContentAlignment="Center"></TextBox>
            <Button Margin="20 0 0 0" Width="100" Height="25" Background="LightGreen" Click="ConnectButton_Click">JOIN</Button>
            <Button Margin="20 0 0 0" Width="100" Height="25" Background="LightGreen" Click="DisconnectButton_Click">DISCONECT</Button>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="5">
            <TextBox MinWidth="500" VerticalAlignment="Center" Name="sendTxt" VerticalContentAlignment="Center"></TextBox>
            <Button Margin="20 0 0 0" Width="150" MaxWidth="150" Height="25" Background="LightGreen" Click="SendButton_Click">SEND</Button>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="5">
            <Label FontSize="15" Content="Username: "></Label>
            <TextBox MinWidth="250" VerticalAlignment="Center" Name="userTxt" VerticalContentAlignment="Center"></TextBox>
            <Button Margin="20 0 0 0" Width="150" Height="25" Background="LightGreen" Click="UsernameButton_Click">CONFIRM</Button>
        </StackPanel>
        <ListBox Grid.Row="3" ItemsSource="{Binding}">
            <ListBox.Background>
                <ImageBrush ImageSource="/Images/ukr.png" Stretch="UniformToFill" Opacity="0.2"/>
            </ListBox.Background>
            
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <ListBoxItem>
                        <DockPanel>
                            <TextBlock DockPanel.Dock="Left" Text="{Binding Username}" TextTrimming="CharacterEllipsis" Margin="5"></TextBlock>
                            <TextBlock Text="{Binding Message}" TextTrimming="CharacterEllipsis" Margin="5"></TextBlock>
                            <TextBlock DockPanel.Dock="Right" Text="{Binding Time}" TextTrimming="CharacterEllipsis" Margin="5"></TextBlock>
                        </DockPanel>
                    </ListBoxItem>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
