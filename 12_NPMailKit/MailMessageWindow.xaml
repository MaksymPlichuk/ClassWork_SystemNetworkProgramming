<Window x:Class="_12_NPMailKit.MailMessageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_12_NPMailKit"
        mc:Ignorable="d"
        Title="MailMessageWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="0.5*"></RowDefinition>
        </Grid.RowDefinitions>

        <StackPanel Background="AntiqueWhite" Grid.Row="0">
            <Grid Height="165">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Label Content="To whom: " Margin="5" ></Label>
                <TextBox Name="recieverEmailTxt" Grid.Column="1" Margin="5" MaxWidth="500" VerticalContentAlignment="Center" IsReadOnly ="True"></TextBox>

                <Label Content="Theme: " Margin="5" Grid.Row="1"></Label>
                <TextBox Name="themeTxt" Grid.Column="1"  Grid.Row="1" Margin="5" MaxWidth="500"  VerticalContentAlignment="Center" IsReadOnly ="True"></TextBox>

                <Label Content="From whom: " Margin="5" Grid.Row="2"></Label>
                <TextBox Name="fromEmailTxt" IsReadOnly="True" Grid.Column="1"  Grid.Row="2" Margin="5" MaxWidth="500"  VerticalContentAlignment="Center" ></TextBox>



                <Label Content="List of Attached files: " Margin="5" Grid.Row="0" Grid.Column="2" HorizontalAlignment="Center"></Label>
                <ListBox Grid.Row="1" Grid.Column="2" Grid.RowSpan="3" Margin="5" ItemsSource="{Binding MailAttachments}">
                </ListBox>
            </Grid>
        </StackPanel>

        <Grid Background="SandyBrown" Grid.Row="1">
            <TextBox Name="msgTxt" Margin="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" IsReadOnly ="True"></TextBox>
        </Grid>

        <Grid Background="BurlyWood" Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Name="LoadBtn" Width="auto" MaxHeight="50" Grid.Column="0" Margin="5" Click="LoadBtn_Click">Load Letter</Button>
            <Button Name="exit" MaxHeight="25" MaxWidth="75" Grid.Column="1" Margin="5" Click="exit_Click">exit</Button>
        </Grid>

    </Grid>
</Window>
