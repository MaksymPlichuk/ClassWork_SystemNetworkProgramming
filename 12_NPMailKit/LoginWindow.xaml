<Window x:Class="_12_NPMailKit.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_12_NPMailKit"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid>
        <Border MinHeight="300" MinWidth="400" Margin="15" Background="White" VerticalAlignment="Center" Padding="20" MaxWidth="500" CornerRadius="15">
            <Border.Effect>
                <DropShadowEffect BlurRadius="30" Color="LightGray"></DropShadowEffect>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Label FontSize="30" FontWeight="Bold" >Login:</Label>
                <TextBox Name="LoginTxt" Grid.Column="1" VerticalContentAlignment="Center" MinWidth="220" Height="30" MaxWidth="220" FontSize="15"></TextBox>


                <Label FontSize="30" FontWeight="Bold" Grid.Row="1">Password:</Label>

                <TextBox Name="passTxt" Grid.Row="1" Grid.Column="1" MinWidth="220" Height="30" MaxWidth="220" FontSize="15" VerticalContentAlignment="Center"></TextBox>

                <Button Grid.Row="2"  Grid.ColumnSpan="2" Name="signInBtn" Margin="15" FontSize="18" Click="signInBtn_Click">Sign In</Button>
            </Grid>
        </Border>
    </Grid>
</Window>
