<Window x:Class="_12_NPMailKit.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_12_NPMailKit"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <DockPanel>
            <ToolBar DockPanel.Dock="Top">
                <Button Click="Button_Click">Refresh</Button>
                <Button Click="Button_Click1">Kill</Button>
                <Button Click="ShowInfo">Show Info</Button>
                <TextBox Name="nameProc" Width="200"></TextBox>
                <Button Click="RunProcess">Ok</Button>
            </ToolBar>
        </DockPanel>
        <Grid Background="LightPink" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
            </Grid.RowDefinitions>
        </Grid>
    </Grid>
</Window>
