<Window x:Class="_11_NPMailSenderLogin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_11_NPMailSenderLogin"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="0.5*"></RowDefinition>
        </Grid.RowDefinitions>

        <StackPanel Background="AntiqueWhite" Grid.Row="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Label Content="To whom: " Margin="5"></Label>
                <TextBox Name="toTxt" Grid.Column="1" Margin="5" MaxWidth="500" VerticalContentAlignment="Center"></TextBox>

                <Label Content="Theme: " Margin="5" Grid.Row="1"></Label>
                <TextBox Name="themeTxt" Grid.Column="1"  Grid.Row="1" Margin="5" MaxWidth="500"  VerticalContentAlignment="Center"></TextBox>

                <Label Content="From whom: " Margin="5" Grid.Row="2"></Label>
                <TextBox Name="rightEmailTxt" IsReadOnly="True" Grid.Column="1"  Grid.Row="2" Margin="5" MaxWidth="500"  VerticalContentAlignment="Center"></TextBox>

                <Button Name="attachBtn" Margin="5" Grid.Column="1" Grid.Row="3" MaxWidth="150" Click="attachBtn_Click">Attach File</Button>
                <CheckBox Name="priorityBtn" Margin="5" Grid.Column="0" Grid.Row="3" MaxWidth="150" Click="priorityBtn_Click">High Priority</CheckBox>

                <Label Content="List of Attached files: " Margin="5" Grid.Row="0" Grid.Column="2" HorizontalAlignment="Center"></Label>
                <ListBox Grid.Row="1" Grid.Column="2" Grid.RowSpan="3" Margin="5" ItemsSource="{Binding FileToMail}">
                </ListBox>
            </Grid>
        </StackPanel>

        <Grid Background="HotPink" Grid.Row="1">
            <TextBox Name="msgTxt" Margin="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">Text Here</TextBox>
        </Grid>
        
        <Grid Background="CadetBlue" Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Name="newtextBtn" Width="auto" MaxHeight="50" Grid.Column="0" Margin="5" Click="newtextBtn_Click">New Letter</Button>
            <Button Name="sendBtn" Width="auto" MaxHeight="50" Grid.Column="2" Margin="5" Click="sendBtn_Click">Send</Button>
            <Button Name="exit" MaxHeight="25" MaxWidth="75" Grid.Column="1" Margin="5" Click="exit_Click">exit</Button>
        </Grid>

    </Grid>
</Window>
