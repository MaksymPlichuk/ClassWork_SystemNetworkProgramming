<Window x:Class="_08_NPClientUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_08_NPClientUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="LightBlue">
        <Border Background="White" Margin="15"  Height="auto" VerticalAlignment="Center" Padding="50">
            <StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="200"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Label Content="IP:" ></Label>
                    <TextBox Grid.Column="1" Name="ipField" Text="{Binding Ip}"></TextBox>
                    <Label Content="Port:" Grid.Column="3"></Label>
                    <TextBox Grid.Column="4" Name="portField"  Text="{Binding Port}"></TextBox>

                    <TextBox Grid.Row="1" Grid.ColumnSpan="3" Name="messageField" Text="{Binding Message}"></TextBox>
                    <Button Grid.Row="1" Grid.Column="4" Background="LightGreen" Click="SendData">Send</Button>
                    <Label Grid.Row="2" Grid.ColumnSpan="5" Content="Dialog" HorizontalAlignment="Center" FontSize="20"></Label>
                </Grid>
                <ListBox Background="LightBlue" ItemsSource="{Binding Messages}" HorizontalContentAlignment="Stretch" ScrollViewer.VerticalScrollBarVisibility="Visible">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <ListBoxItem>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="250"/>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="{Binding Text}" TextTrimming="CharacterEllipsis" Margin="5"></TextBlock>
                                    <TextBlock Grid.Column="2" Text="{Binding Time}" TextTrimming="CharacterEllipsis" Margin="5"></TextBlock>
                                </Grid>
                            </ListBoxItem>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </Border>
    </Grid>
</Window>
